# Example environment variables for Prodflux
# Copy this file to .env and fill in your values

# WooCommerce Integration
WOOCOMMERCE_API_URL=https://your-shop.com
WOOCOMMERCE_CONSUMER_KEY=your_consumer_key_here
WOOCOMMERCE_CONSUMER_SECRET=your_consumer_secret_here

# Django Secret Key (generate a new one for production)
SECRET_KEY=your-secret-key-here

# Debug Mode (set to False in production)
DEBUG=True

# Email Template Configuration (for order completion emails)
EMAIL_SENDER_NAME=Your Name
EMAIL_SENDER_EMAIL=info@example.com
EMAIL_SENDER_PHONE=+49 123 456789
EMAIL_COMPANY_NAME=Your Company

# Database URL (optional - uses SQLite by default)
# For local PostgreSQL with production data:
# DATABASE_URL=postgresql://localhost/prodflux_local

# Production Settings (only needed on Render.com)
# RENDER=True
# RENDER_EXTERNAL_HOSTNAME=your-app.onrender.com
# DATABASE_URL=postgresql://user:password@host:port/database
